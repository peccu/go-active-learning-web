<!DOCTYPE html>
<html>
  {{ template "head" }}
  <body>
    {{ template "header" }}
    <div id="app">
      <select v-model="filter_label">
        <option value=1>Positive</option>
        <option value=-1>Negative</option>
      </select>
      <span>Selected: ${ filter_label }</span>
      <ul>
        <list-example 
          v-for="item in examplesFilterByLabel(filter_label)"
          v-bind:key="item.Url"
          v-bind:item="item"
          ></list-example>
      </ul>
    </div>
    <script>
      var app = new Vue({
        delimiters: ['${', '}'],
        el: '#app',
        data: {
          filter_label: 1,
          results: []
        },
        mounted() {
          axios.get("/api/recent_added_examples")
            .then(response => {
              this.results = response.data;
            });
        },
        methods: {
          examplesFilterByLabel: function(label) {
            return this.results.filter(function(e) {
              return e.Label == label;
            })
          }
        }
      })
    </script>
  </body>
</html>
